<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.romix.korbball.meisterschaft"
    android:versionCode="12"
    android:versionName="0.91" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ch.romix.korbball.meisterschaft.Start"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ch.romix.korbball.meisterschaft.RankingActivity"
            android:label="@string/title_activity_ranking" >
        </activity>
        <activity
            android:name="ch.romix.korbball.meisterschaft.Info"
            android:label="@string/title_activity_info" >
        </activity>
        <activity
            android:name="ch.romix.korbball.meisterschaft.GamesActivity"
            android:label="@string/title_activity_games">
        </activity>
    </application>

</manifest>